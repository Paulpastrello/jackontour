<div class="row">
	{{ form_start(form) }}
    
	<div class="col-xs-12">
		{% if not form.vars.valid %}
		<div class="alert alert-danger alert-dismissible"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			Attenzione :
			{{ form_errors(form) }}
		</div>
		{% endif %}
	</div>

	<div class="form-group col-sm-2 col-xs-4">
		{#{ form_label(form.nome) }#}
		{{ form_widget(form.nome, {'attr': {
			'class': 'form-control', 
			'placeholder': 'Nome'
			}}) }}
	</div>
	<div class="form-group col-sm-7 col-xs-12">
		{#{ form_label(form.addr) }#}
		<div class="input-group">
		{{ form_widget(form.addr, {'attr': {
			'class': 'form-control', 
			'placeholder': 'Indirizzo'
			}}) }}		
		<span class="input-group-btn">
			<button id="remloc" class="btn btn-default hidden" type="button" onclick="removeFormLocation()">
				<i class="glyphicon glyphicon-remove text-danger"></i>
			</button>
			<button id="geoloc" class="btn btn-default" type="button" onclick="getGeolocation()">
				<i class="glyphicon glyphicon-map-marker text-primary"></i>
			</button>
			
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
		</span>
		</div>
		{{ form_widget(form.latlng) }}
	</div>
	{{ form_end(form) }}
</div>