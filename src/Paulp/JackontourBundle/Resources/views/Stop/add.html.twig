<div class="row">
	{{ form_start(form) }}
    
	<div class="col-xs-12">
		{% if not form.vars.valid %}
			{{ dump(form) }}
		<div class="alert alert-danger alert-dismissible"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			Attenzione : (add)
			{{ form_errors(form) }}
			{{ form_errors(form.addr) }}
		</div>
		{% endif %}
	</div>

	<div class="form-group col-sm-7 col-xs-12">		
		{{ form_widget(form.nome) }}
		{{ form_widget(form.latlng) }}
		{#{ form_label(form.addr) }#}
		<div class="input-group">
		{{ form_widget(form.addr, {'attr': {
			'class': 'form-control', 
			'placeholder': 'Indirizzo'
			}}) }}		
		<span class="input-group-btn">			
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}		
		</span>
		</div>
	</div>
	
	<div class="form-group col-sm-5 col-xs-12">	
		{#{ form_label(form.email) }#}
		<div class="input-group">	
		<span class="input-group-addon" id="sizing-addon2">@</span>
		{{ form_widget(form.email, {'attr': {
			'class': 'form-control', 
			'placeholder': 'Email'
			}}) }}
		<span class="input-group-btn">
		{{ form_widget(form.cancel, {'attr': {'class': 'btn btn-warning'}}) }}
		</span>
		</div>
	</div>
	
	<div class="form-group col-sm-12 col-xs-12">	
		{{ form_widget(form.tweet) }}
	</div>
	{{ form_end(form) }}
</div>